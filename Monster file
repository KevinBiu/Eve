import random 
import sys
import time 


class player():
  def __init__(self,playername):
    super().__init__()
    self.name = playername
    self.life = 200
    self.maxlife = 200
    self.atk = random.randint(1,10)
  
  def attack(self,monster):
    monster.life = monster.life -  self.atk
    time.sleep(1)
    return 'You Dealt ' + str(self.atk) + 'DMG'
    
    
  def heal(self):
    self.life = self.life + self.heal
    return 'You healed Yourself ' + str(self.heal) + 'Life Points'
    
  def defend(self,monster):
    self.block = random.randint  (1,5)
    if self.block < 3:
      self.life = self.life - monster.atk
      return 'You Took ' + str(monster.atk) + 'DMG'
    elif self.block >= 3:
      return 'You block The enemy attack'
    
      


class Slime ():
  def __init__ (self):
    self.name = "Slime"
    self.life = 10
    self.atk = random.randint (10,15)
    
  def attack(self):
    return 'The Slime Dealt ' + str(self.atk) + " To You"
    
  def death(self):
    print ("The Slime Has been defeated")
    
    
class bandits():
  def __init__(self):
    self.name = "Bandits"
    self.life = 30 
    self.atk = random.randint (15,20)
    self.spell = random.randint (20,25)
    
    
  def attack(self):
    return 'Bandits Dealt ' + str(self.atk) + " To You"
    
  def DangerousPostion(self):
    return 'The Bandits Threw a dangerous postion, You took ' + str(self.spell) + 'Damage'
    
  def death(self):
    return ("The Bandits have been defeated")
    
    
