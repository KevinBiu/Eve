class demon():
  def __init__(self):
    self.name = "Demon"
    self.life = 40
    self.atk = random.randint(25,30)
    self.spell = random.randint(30,50)
    
  def attack(self):
    return 'The Demon has Dealt ' + str(self.atk) + " To You"
    
  def death(self):
    return ("The Demon Has been defeated")  
    
  def DangerousSpell(self):
    return 'The Demon Has Cast a Spell. It Dealt ' + str(self.spell) + 'To you'
    
class StreetThugs():
  def __init__(self):
    self.name1 = "Thug 1"
    self.name2 = "Thug 2"
    self.life1 = 70
    self.life2 = 70
    self.atk = random.randint(10,20)
    self.atk2 = random.randint(15,20)
    
  def attack(self):
    return 'Thug 1 has Dealt ' + str(self.atk) + " To You"
    
  def death(self):
    return ("Thug 1 Has been defeated")  
    
  def attack2(self):
    return 'Thug 2 has Dealt ' + str(self.atk) + " To You"
    
  def death2(self):
    return ("Thug 2 Has been defeated")  
    
